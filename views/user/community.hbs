<div class="community">
<div class="panel" >
  <div class="panel-body">
    <h1 class="text" style='color:#c2f8cb'>Our Community</h1>
    <form action="/community" method="POST" enctype="multipart/form-data">
    <textarea class="form-control {{#if errors.body}}is-invalid{{/if}}" id="body" rows="3" placeholder="Today I ate so healthy that I want to share it" name="body" required>{{comment}}</textarea>
      <div class=" mar-top clearfix d-grid gap-2 d-md-flex justify-content-md-end">
      <label for="image-input"><i class='bx bxs-camera-plus bx-tada-hover bx-md' style='color:#c2f8cb'  ></i></label>
      <input type="file" name="image" id="image-input" class="form-control-file" style="display: none;visibility: none"/>
      <button class="btn btn-outline-light" style='color:#c2f8cb' type="submit"><i class="fa fa-pencil fa-fw"></i> Share</button>
    </div>
    </form>
  </div>
</div>

<div class="d-flex min-vh-100 gap-2">
  <section class=" border-bottom-0 border-top-0 w-100 p-4">
    <h1 class="text" style='color:#c2f8cb'>Explore what people are sharing</h1>
    {{#each comments as |comment|}}
  
      {{> comment comment=comment currentUser=../currentUser}}
    {{/each}}
  </section>
</div>
</div>


