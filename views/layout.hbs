  <title>Açaí Food Diary</title>
</head>
<body>
  {{#if currentUser}}
    {{> sidebar}}
    <div class="toggle-padding page-padding-open">
  {{else}}
    {{> nav}}
  {{/if}}

    {{{body}}}

  {{#if currentUser}}
    </div>
  {{/if}}

  <script>
    const toggleBtn = document.querySelector('.sidebar-toggle');
    const sidebar = document.querySelector('.sidebar-container');
    const sidebarTitle = document.querySelector('.sidebar-title');
    const spans = document.querySelectorAll('.sidebar-list-text');
    const iconToChange = document.querySelector('.icon-to-change');
    const pagesDynamics = document.querySelectorAll('.toggle-padding');

      toggleBtn.addEventListener('click', () => {

        sidebar.classList.toggle('close');
        sidebarTitle.classList.toggle('hidden');
        spans.forEach((span) => {
          span.classList.toggle('hidden');
        })
        iconToChange.classList.toggle('bxs-chevron-left-circle');
        iconToChange.classList.toggle('bxs-chevron-right-circle');
        pagesDynamics.forEach((page) => {
          page.classList.toggle('page-padding-close');
          page.classList.toggle('page-padding-open'); 
        })
      });

    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>