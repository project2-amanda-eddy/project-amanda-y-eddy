<div class="border border-top-0 border-start-0 border-end-0 py-4" >
  <div class="d-flex gap-3">
    <div class="image-community" style="background-image: url({{comment.user.image}})"></div>
      <div>
      <h4 class="text-capitalize mb-1">{{comment.user.username}}</h4>
      <p class="m-0">{{comment.body}} </p>
      <img src="{{comment.image}}" class="object-fit-cover rounded" width="400px" >
      </div>
    </div>
      <div class="d-flex align-items-center" style="margin-left: 84px;">
        <button class="like-btn btn" style='color:#c8a4db' type="button" value="{{comment.id}}">
        <span>{{comment.likes.length}}</span>
      
        {{#hasLike currentUser=currentUser comment=comment}}
        <i class='bx bxs-heart bx-tada' style='color:#c8a4db'  ></i>
        {{else}}
        <i class='bx bx-heart bx-tada' style='color:#c8a4db' ></i>
        {{/hasLike}}
        </button>
    
        {{#if comment.isMine}}
        <form class="m-0" action="/comments/{{comment.id}}/delete" method="POST">
        <button class="btn text-danger" type="submit">
          <i class='bx bxs-trash bx bxs-like bx-flashing-hover' style='color:#c8a4db'></i>
        </button>
        </form>
        {{/if}}
      </div> 
</div>